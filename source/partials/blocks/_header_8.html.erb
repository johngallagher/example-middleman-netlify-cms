<section class="bg-dark">
  <img src="/images/header-inner-1.jpg" alt="Image" class="bg-image opacity-70">
  <div class="container height-md-30">
    <div class="row">
      <div class="col-sm-7 col-md-7 col-lg-6 col-xl-6">
        <h1 class="display-4" style="color: white;"><%= block.title %></h1>
        <% if block.intro.present? %>
          <p class="lead mb-0" style="color: white;"><%= block.intro %></p>
        <% end %>
        <% if block.button.url.present? %>
          <a href="<%= block.button.url %>" class="btn btn-primary btn-lg mt-2"><%= block.button.title %></a>
        <% end %>
      </div>
    </div>
  </div>
</section>

