<section>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-12">
        <div class="row">
          <div class="col-lg-7">
            <div class="card justify-content-center p-lg-4 p-3 mb-lg-0">
              <div class="card-body py-3 flex-grow-0">
                <span class="d-block display-4 mb-2 text-dark"><%= block.components.fetch(0).title %></span>
                <p class="lead"><%= block.components.fetch(0).intro %></p> 
              </div>
            </div>
          </div>
          <div class="col-lg-5 d-flex">
            <div class="list-group d-flex flex-fill">
              <% block.components[1..-1].each do |block| %>
              <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center flex-fill">
                <div class="d-flex align-items-center">
                  <img src="/assets/img/icons/icon<%= block.icon_number %>.svg" class="d-block mr-3 icon">
                  <span class="mb-0 h6 mb-0"><%= block.title %></span>
                </div>
              </a>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

