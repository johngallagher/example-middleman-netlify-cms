<section>
  <div class="container">
    <div class="row">
      <% block.components.each do |component| %>
        <div class="col-12 col-md-4 d-md-flex">
          <a href="<%= component.link.url %>">
            <div class="text-center card">
              <div class="card-body py-4">
                <img src="/assets/img/icons/icon<%= component.icon_number %>.svg" class="icon text-primary">
                <div>
                  <h5 class="mb-1 mt-2"><%= component.title %></h5>
                  <p><%= component.intro %></p>
                  <p><%= component.link.title %></p>
                </div>
              </div>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</section>
